<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemLayout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_height"
    android:background="@drawable/list2"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="5dip"
    android:paddingLeft="10dip"
    android:paddingTop="5dip" >

    <ImageView
        android:id="@+id/imageRoom"
        android:layout_width="@dimen/list_item_pic"
        android:layout_height="@dimen/list_item_pic"
        android:src="@drawable/home4" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_left3_margin" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tvRoomName"
                android:layout_width="@dimen/list_roomname_width"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_height="wrap_content"
                android:text="@string/RoomWithoutName"
                android:textColor="#111111"
                android:textSize="@dimen/list_item_txt1"  />

            <TextView
                android:id="@+id/tvMark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0"
                android:text="mark"
                android:textSize="1sp" />
        </LinearLayout>

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="2dip"
            android:layout_centerHorizontal="true"
            android:background="#BDBDBD" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="@dimen/list_item_width"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:orientation="horizontal" >

                <!--
            <TextView
                android:id="@+id/tvRoomTempTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Room temp " />
                -->

                <TextView
                    android:id="@+id/tvRoomTemp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="N/A"
                    android:textSize="@dimen/list_item_txt3" />

                <TextView
                    android:id="@+id/tvRoomC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="℃"
                    android:textSize="@dimen/list_item_txt3" />

                <TextView
                    android:id="@+id/tvId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0"
                    android:text=""
                    android:textSize="1sp" />

                <TextView
                    android:id="@+id/tvType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0"
                    android:text=""
                    android:textSize="1sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvRun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:text="Running"
                android:textSize="@dimen/list_item_txt3" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_left4_margin"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvTempSet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30"
            android:textColor="#0099CC"
            android:textSize="@dimen/list_item_txt2" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="℃"
                android:textSize="@dimen/list_item_txt5" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>